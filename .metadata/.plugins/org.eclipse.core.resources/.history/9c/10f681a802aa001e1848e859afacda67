
public class Recursion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(power(1, 8));
	}

	private static int power(int base, int exponent) {
		// TODO Auto-generated method stub
		if (exponent < 1)
			return base;
		return base * power(base, exponent - 1);
	}

}
